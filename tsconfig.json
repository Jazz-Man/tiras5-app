{
  "compilerOptions": {
    "outDir": "dist/js",
    "rootDir": "src/scripts",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es6",
      "es2016",
      "es2016.array.include",
      "scripthost",
      "es2015.promise",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es2015.collection",
      "es2015.core",
      "es2015.generator",
      "es2015.iterable",
      "es2015.proxy",
      "es2015.reflect",
      "es7",
      "es2017",
      "es2017.object",
      "es2017.sharedmemory",
      "esnext",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "dist", "webpack"]
}
